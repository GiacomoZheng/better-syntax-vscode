{
    "name": "vscode-better-syntax",
    "displayName": "Vscode Better Syntax",
    "description": "better-syntax for some languages I'm using",
    "version": "0.0.1",

    "__icon": "images/icon.png",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages"
    ],

    "publisher": "giacomozheng",
    "repository": {
        "type": "git",
        "url": "https://github.com/GiacomoZheng/vscode-better-syntax.git"
    },
    "qna": "https://github.com/GiacomoZheng/vscode-better-syntax/issues",
    
    "contributes": {
        "languages": [
            {
                "id": "latex",
                "aliases": ["LaTeX"],
                "extensions": [".tex"],
                "configuration": "./language-configuration/latex.language-configuration.json"

            }
        ],
        "grammars": [
            {
                "language": "latex",
                "scopeName": "text.tex.latex",
                "path": "./syntaxes/latex.tmLanguage.json",
                "embeddedLanguages": {
					"source.asymptote": "asymptote",
					"source.cpp": "cpp",
					"source.css": "css",
					"source.dot": "dot",
					"source.gnuplot": "gnuplot",
					"text.html": "html",
					"source.java": "java",
					"source.js": "js",
					"source.lua": "lua",
					"source.python": "python",
					"source.scala": "scala",
					"text.xtml": "xtml",
					"source.yaml": "yaml"
				}
            }
        ],

        "configurationDefaults": {
            "[latex]": {
                "files.autoGuessEncoding": false,
                "files.encoding": "utf8",
                "editor.insertSpaces": false,

				"editor.formatOnPaste": false,
				"editor.formatOnSave": false,
				"editor.suggestSelection": "recentlyUsedByPrefix"
			}
		}
    }
}
