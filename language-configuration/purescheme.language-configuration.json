{
    "comments": {
        "lineComment": ";",
        "blockComment": [ "#|", "|#" ]
    },
    "brackets": [
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*\\(.*[^\\)]\\s*$",
        "decreaseIndentPattern": "$ ^"
    },

    "wordPattern": "[\\w\\-\\.:<>\\*][\\w\\d\\.\\/\\-\\?<>\\*!]+"
}